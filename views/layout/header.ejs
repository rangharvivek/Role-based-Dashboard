<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title || "App" %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style> body { padding-top: 70px; } </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom fixed-top">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/">RoleBlog</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto">
        <% if (!currentUser) { %>
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/posts">Posts</a></li>
          <li class="nav-item"><a class="nav-link" href="/dashboard/<%= currentUser.role %>">Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout (<%= currentUser.username %>)</a></li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
<div class="container mt-3">
